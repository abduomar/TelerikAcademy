@model CreateBannerViewModel
@using Microsoft.Extensions.Primitives;

<!-- BEGIN: Content-->
<div class="app-content content">
    <div class="content-wrapper">
        <div class="content-header row mb-1">
            <div class="content-header-left col-md-6 col-12 mb-2">
                <h3 class="content-header-title">User Management</h3>
                <div class="row breadcrumbs-top">
                    <div class="breadcrumb-wrapper col-12">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item">
                                <a asp-action="CreateClient">Create Client</a>
                            </li>
                            <li class="breadcrumb-item">
                                <a asp-action="CreateAccount">Create Account</a>
                            </li>
                            <li class="breadcrumb-item active">
                                <a asp-action="CreateUser">Create User</a>
                            </li>
                            <li class="breadcrumb-item active">
                                <a asp-action="AddUserAccount">Add Account To User</a>
                            </li>
                            <li class="breadcrumb-item active">
                                Create Banner
                            </li>
                        </ol>
                    </div>
                </div>
                <div class="row breadcrumbs-top">
                </div>
            </div>
        </div>
        <div class="content-body">
            <!-- Basic form layout section start -->
            <section id="basic-form-layouts">
                <div class="row">
                    <div class="col-md-6">
                        <div class="card">
                            <div class="card-header">
                                <h4 class="card-title" id="basic-layout-form">Project Info</h4>
                            </div>
                            <div class="card-content collapse show">
                                <div class="card-body">
                                    <form id="register-client-form" asp-controller="Authorize" asp-action="CreateBanner" method="post">
                                        <div class="form-body">
                                            <h4 class="form-section"><i class="ft-user"></i> Register Banner</h4>
                                            <div class="row">
                                                <div class="col-md-12">
                                                    <div class="form-group">
                                                        <label for="projectinput1">Image</label>
                                                        <input asp-for="@Model.ImgPath" type="text" class="form-control" placeholder="Paste Image URL Here">
                                                        <span asp-validation-for="@Model.ImgPath" class="text-danger"></span>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-md-12">
                                                    <div class="form-group">
                                                        <label for="projectinput1">Image</label>
                                                        <input asp-for="@Model.ImgUrl" type="url" class="form-control" placeholder="Paste Image URL Here">
                                                        <span asp-validation-for="@Model.ImgUrl" class="text-danger"></span>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="form-actions">
                                                <button type="reset" class="btn btn-warning mr-1">
                                                    <i class="la la-refresh"></i> Cancel
                                                </button>
                                                <button type="submit" class="btn btn-primary" id="type-client-success">
                                                    <i class="la la-check-square-o"></i> Create banner
                                                </button>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </section>
            <!-- // Basic form layout section end -->
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-sweetalert/1.0.1/sweetalert.min.js"></script>
    <script src="~/js/createbanner.js"></script>
}
<!-- END: Content-->