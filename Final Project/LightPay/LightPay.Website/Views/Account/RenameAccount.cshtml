@model RenameAccountViewModel
@using Microsoft.Extensions.Primitives;



<!-- BEGIN: Content-->
<div class="app-content content">
    <div class="content-wrapper">
        <div class="content-header row mb-1">
            <div class="content-header-left col-md-6 col-12 mb-2">
                <h3 class="content-header-title">Edit Account</h3>
            </div>
        </div>


        <div class="content-body">
            <!-- Basic form layout section start -->
            <section id="basic-form-layouts">

                <div class="col-md-6">
                    <div class="card">
                        <div class="card-header">
                            <h4 class="card-title" id="basic-layout-colored-form-control">User Profile</h4>
                        </div>
                        <div class="card-content collapse show">
                            <div class="card-body">
                                <form class="form" asp-controller="Account" asp-action="RenameAccount" method="post">
                                    <div class="form-body">
                                        <h4 class="form-section"><i class="la la-paperclip"></i> Rename Account NickName </h4>

                                        <div class="row">
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label for="projectinput6">A/c Number</label>
                                                    <input asp-for="@Model.AccountNumber" type="text" id="companyName" class="form-control" value="@Model.AccountNumber" readonly />
                                                </div>
                                            </div>

                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label for="projectinput6">Nickname</label>
                                                    <input asp-for="@Model.Nickname" type="text" id="companyName" class="form-control" value="@Model.Nickname" />
                                                    <span asp-validation-for="@Model.Nickname" class="text-danger"></span>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label for="projectinput6">Account Balance</label>
                                                    <input asp-for="@Model.Balance" type="number" id="companyName" class="form-control" value="@Model.Balance" readonly />
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label for="projectinput6">Client</label>
                                                    <input asp-for="@Model.ClientName" type="text" id="companyName" class="form-control" value="@Model.ClientName" readonly />
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-actions">
                                            <button type="reset" class="btn btn-warning mr-1">
                                                <i class="ft-x"></i> Cancel
                                            </button>
                                            <button type="submit" class="btn btn-primary" id="type-account-success">
                                                <i class="la la-check-square-o"></i> Save Changes
                                            </button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </div>
</div>
