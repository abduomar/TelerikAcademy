        <div class="content-body">
            <!-- Basic form layout section start -->
            <section id="basic-form-layouts">
                <div class="row">
                    <div class="col-md-6">
                        <div class="card">
                            <div class="card-header">
                                <h4 class="card-title" id="basic-layout-form">Project Info</h4>
                            </div>
                            <div class="card-content collapse show">
                                <div class="card-body">
                                    <form id="register-client-form" asp-controller="Authorize" asp-action="Create" method="post">
                                        <div class="form-body">
                                            <h4 class="form-section"><i class="ft-user"></i> Register Client</h4>
                                            <div class="row">
                                                <div class="col-md-12">
                                                    <div class="form-group">
                                                        <label for="projectinput1">Name</label>
                                                        <input asp-for="@Model.ClientName" type="text" class="form-control" placeholder="Client Name">
                                                        <span asp-validation-for="@Model.ClientName" class="text-danger"></span>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="form-actions">
                                                <button type="reset" class="btn btn-warning mr-1">
                                                    <i class="la la-refresh"></i> Cancel
                                                </button>
                                                <button type="submit" class="btn btn-primary" id="type-client-success">
                                                    <i class="la la-check-square-o"></i> Create client
                                                </button>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </section>
            <!-- // Basic form layout section end -->
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-sweetalert/1.0.1/sweetalert.min.js"></script>
    <script src="~/js/createclient.js"></script>
}
<!-- END: Content-->